#!/usr/bin/env python
# coding: utf8
from gluon import *
from datetime import *
from time import *

class log:
    def __init__(self):
        __path = "D:/bitacora.log"

    def logear(self, info):
        try:
            f = open(__path, "a")
        except(IOError), e:
            f = open(__path, "w")
        f.write(strftime("%Y-%b-%d %H:%M:%S",localtime()) + " ---   " + info + "\n")
        f.close()
