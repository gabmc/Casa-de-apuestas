{{extend 'layout.html'}}
<div id="content">
    <div class="post greenbox">
           <div class="title">
                <h1>Insertar Categoria</h1>
           </div>
           <div class="entry">
                    {{=form}}
           </div>
           <div class="btm" align="center">
              <div class="l">
                  <div class="r">
                       <small>*Por favor llenar todos los campos solicitados</small>
                  </div>
              </div>
           </div>
     </div>
</div>
<div id="sidebar">
  <ul>
    <li>
      <h2>
       Categorias Agregadas
      </h2>
      <ul align="center">
        {{cont = 0}}
        {{for cat in categorias:}}
        {{cont += 1}} 
        {{if (cont < 5):}}
        {{=LI(A(cat.nombre, _href=URL("showCategoria", args=cat.id)))}}
        {{pass}}
        {{else:}}
        <small color="blue"> {{=LI(A("Ver Mas", _href=(URL("mostrarCategoria"))))}}</small>
        {{pass}}        
      </ul>
    </li>
     
     <!--<h2>
      Titulo2
     </h2>
     <ul>
      Mundo
     </ul>
   </ul>-->
</div>
{{pass}}
